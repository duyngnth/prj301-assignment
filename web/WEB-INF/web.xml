<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>WeeklyScheduleController</servlet-name>
        <servlet-class>controller.WeeklyScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenticationController</servlet-name>
        <servlet-class>controller.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionDetailController</servlet-name>
        <servlet-class>controller.SessionDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewGroupController</servlet-name>
        <servlet-class>controller.ViewGroupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePageController</servlet-name>
        <servlet-class>controller.HomePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceTakingController</servlet-name>
        <servlet-class>controller.AttendanceTakingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceReportController</servlet-name>
        <servlet-class>controller.AttendanceReportController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WeeklyScheduleController</servlet-name>
        <url-pattern>/WeeklySchedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticationController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionDetailController</servlet-name>
        <url-pattern>/SessionDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewGroupController</servlet-name>
        <url-pattern>/Group</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePageController</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceTakingController</servlet-name>
        <url-pattern>/AttendanceTaking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceReportController</servlet-name>
        <url-pattern>/AttendanceReport</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/Home</url-pattern>
        <url-pattern>/WeeklySchedule</url-pattern>
        <url-pattern>/SessionDetail</url-pattern>
        <url-pattern>/Group</url-pattern>
        <url-pattern>/AttendanceTaking</url-pattern>
        <url-pattern>/AttendanceReport</url-pattern>
    </filter-mapping>
</web-app>
